{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./", 

    "strict": true,

    "esModuleInterop": true,
    "resolveJsonModule": true,
    
    "types": ["node"],

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  
  "include": ["src/**/*", "prisma/seed.ts"]
}
